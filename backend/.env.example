# Sentinel Quant Environment Variables
# Copy this file to .env and fill in your values

# Application
APP_NAME=Sentinel Quant
DEBUG=true
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://sentinel:sentinel_pass@timescaledb:5432/sentinel_quant

# Redis
REDIS_URL=redis://redis:6379/0

# Security (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-in-production

# Binance API (Get from https://www.binance.com/en/my/settings/api-management)
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Trading Settings
TRADING_ENABLED=false
MAX_POSITION_SIZE_USDT=100.0
MAX_DAILY_LOSS_PERCENT=5.0
CONFIDENCE_THRESHOLD=0.85

# Dify API (For sentiment analysis)
DIFY_API_URL=
DIFY_API_KEY=

# Firebase (For push notifications)
FIREBASE_CREDENTIALS_PATH=

# Celery
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
